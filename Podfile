use_frameworks!

def shared_pods
    pod 'Alamofire'
end

target 'Apic' do
   platform :ios, '8.0'
   use_frameworks!
   shared_pods
end

target 'ApicTests' do
    shared_pods
end

target 'Apic WatchOS' do
    platform :watchos, '2.0'
    use_frameworks!
    shared_pods
end

target 'Apic tvOS' do
    platform :tvos, '9.0'
    use_frameworks!
    shared_pods
end

target 'Apic tvOS Tests' do
    platform :tvos, '9.0'
    shared_pods
end

target 'Apic OSX' do
   platform :osx, '10.9'
   shared_pods
end

target 'Apic OSX Tests' do
    platform :osx, '10.9'
    shared_pods
end